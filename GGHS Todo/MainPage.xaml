    <Page.Resources>
        <SolidColorBrush x:Key="txtColor" Color="Black" />
        <SolidColorBrush x:Key="dayColor" Color="LightSteelBlue" />
        <CornerRadius x:Key="corner">10</CornerRadius>
        <SolidColorBrush x:Key="cellColor" Color="#EEF4F4F4" />
        <x:String x:Key="gridThick">5</x:String>
        <x:Int32 x:Key="cellFontSize">27</x:Int32>
        <x:Int32 x:Key="comboFontSize">25</x:Int32>
    </Page.Resources>

    <Grid>
        <Grid Margin="177,65,0,0" HorizontalAlignment="Left" Width="469" Height="118" VerticalAlignment="Top">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextWrapping" Value="Wrap"/>
                    <Setter Property="VerticalAlignment" Value="Top"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="Foreground" Value="{StaticResource txtColor}"/>
                    <Setter Property="FontFamily" Value="Segoe" />
                </Style>
            </Grid.Resources>
            <TextBlock x:Name="mainText" Text="Codename Bracelet" FontSize="55" Height="73" FontWeight="Bold"/>
            <TextBlock x:Name="mainText2" Text="Development is underway" FontSize="30" Width="544" Foreground="#FF444444" Margin="0,77,0,0"/>
        </Grid>
        <Grid Margin="10,205,0,10" HorizontalAlignment="Left" Width="315">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="CornerRadius" Value="10" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Width" Value="220"/>
                    <Setter Property="VerticalAlignment" Value="Top" />
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="25"/>
                    <Setter Property="FontFamily" Value="Segoe" />
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Button x:Name="AddButton" Margin="0,115,0,0" Click="AddButton_Click">
                <TextBlock><Run Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="21"/><Run Text=" Add New"/></TextBlock>
            </Button>
            <TextBlock Margin="0,178,0,660" FontSize="18" Text="Add new task" Foreground="#ff555555"/>
            <Button x:Name="RemoveButton" Margin="0,280,0,0" Click="RemoveButton_Click">
                <TextBlock><Run Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="21"/><Run Text=" Remove Old"/></TextBlock>
